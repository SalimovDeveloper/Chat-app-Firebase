<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout android:id="@+id/draw"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.UsersFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:openDrawer="end"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ToolBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/my_viewPager2"
            android:background="#1579C0"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/btn_menu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/menu"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textSize="30sp"
                    android:gravity="start|center"
                    />

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#1579C0"
            app:tabIndicator="@null"
            app:tabTextColor="@color/qoshimcha_rang"
            app:tabSelectedTextColor="@color/white"
            app:tabMode="fixed"
            />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/my_viewPager2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/ToolBar"
            />


    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#1579C0"
        app:itemVerticalPadding="15dp"
        app:itemTextColor="@color/white"
        app:itemTextAppearance="?android:attr/textAppearanceLarge"
        app:itemIconTint="#C44EFD"
        app:itemIconSize="30dp"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/fragment_header"
        app:menu="@menu/my_menu"
        android:focusable="true" />


</androidx.drawerlayout.widget.DrawerLayout>